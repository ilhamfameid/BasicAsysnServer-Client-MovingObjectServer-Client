<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Connection -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <TextBox x:Name="txtHost" Width="120" Text="127.0.0.1" Margin="0,0,5,0"/>
            <TextBox x:Name="txtPort" Width="60" Text="9000" Margin="0,0,5,0"/>
            <TextBox x:Name="txtUser" Width="100" Text="user1" Margin="0,0,5,0"/>
            <Button Content="Connect" Click="btnConnect_Click" Margin="0,0,5,0"/>
            <Button Content="Disconnect" Click="btnDisconnect_Click"/>
        </StackPanel>

        <!-- Chat area -->
        <ListBox x:Name="lstChat" Grid.Row="1"/>

        <!-- Message input -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5,0,0">
            <TextBox x:Name="txtMessage" Width="400" Margin="0,0,5,0"/>
            <Button Content="Send" Width="80" Click="btnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
